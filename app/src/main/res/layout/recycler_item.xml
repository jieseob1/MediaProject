<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="D-"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/nextPaymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="06.13"
            android:textColor="@color/gray"
            android:textSize="9sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/homefragmentrecyclerviewbackgroundcolor"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/common_google_signin_btn_icon_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="05.13"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/applicationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="넷플릭스"

                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sorting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프리미엄"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relativeRayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/subscribeMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/koreanwon"
                        android:text="14,500"
                        android:textColor   ="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/koreanwon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:gravity="center"
                        android:text="원"
                        android:layout_toLeftOf="@+id/justimage"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/justimage"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_next_black" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/shareUser1_image"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@+id/subscribeMoney"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_plus_user" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/shareUser2_image"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@+id/subscribeMoney"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/shareUser1_image"
                        android:src="@drawable/ic_plus_user" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/shareUser3_image"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@+id/subscribeMoney"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/shareUser2_image"
                        android:src="@drawable/ic_plus_user" />



                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
