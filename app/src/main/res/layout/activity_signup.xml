<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="72dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo_letter_ver_2" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/logo1"
                    android:layout_centerInParent="true"
                    android:src="@drawable/symbol_bear_pink" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/singupEmailLayout"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/relLayout1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_input1"
                android:weightSum="10">

                <TextView
                    android:id="@+id/SignupEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:gravity="left|center_vertical"
                    android:text="이메일"
                    android:textColor="@color/gray"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/editTextSignUpEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SignupPasswordLayout"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/singupEmailLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_input1"
                android:weightSum="10">

                <TextView
                    android:id="@+id/SignupPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:gravity="left|center_vertical"
                    android:text="비밀번호"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/editTextSignUpPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_input1"
                android:weightSum="10">

                <TextView
                    android:id="@+id/SignupPasswordConfirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:gravity="left|center_vertical"
                    android:text="비밀번호확인"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                ​

                <EditText
                    android:id="@+id/editTextSignUpPasswordConfirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="11sp" />
                ​
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSignup"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="50dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:background="@drawable/round_button_pink"
                android:text="회원가입"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textviewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="70dp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>